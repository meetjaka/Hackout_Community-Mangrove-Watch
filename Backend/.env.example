# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/mangrove_watch

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Push Notifications
VAPID_EMAIL=your_email@domain.com
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# Weather API
WEATHER_API_KEY=your_openweather_api_key

# WebSocket
WS_CLIENT_URL=http://localhost:3000

# AI/ML Model
AI_MODEL_PATH=file://./models/mangrove-classifier.json

# Satellite Data
SENTINEL_HUB_URL=https://services.sentinel-hub.com/api/v1
SATELLITE_API_KEY=your_satellite_api_key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760 # 10MB
